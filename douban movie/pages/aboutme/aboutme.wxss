.container{
    width: 100%;
    flex-direction: column;
    flex: 1;
    background: #efeff4;
}
.person{
	display: flex;
	margin-top: 40rpx;
	background-color: #ffffff;
	padding: 20rpx 0;
	padding-left: 20rpx;
	align-items: center;
}
.per{
    width:200rpx;
    height: 200rpx;
    border: 2rpx solid #eeeeee;
    border-radius: 20rpx;
    margin-right: 40rpx;
}
.name{
	flex: 1;
}
.help{
	margin-top: 40rpx;
	background-color: #ffffff;
	padding: 20rpx 0;
	padding-left: 20rpx;
	display: flex;
	align-items: center;
}
.help text{
	flex: 1;
	padding:25rpx 0;
}
.arrow-right{
	width:40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
