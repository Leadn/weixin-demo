.swiper swiper{
	height:400rpx;	
}
swiper-item{
	width:100%;
	height:100%;
}
.slide-image{
	width:100%;
	height:100%;
}
.titl{
	padding: 10rpx 80rpx ;
	display: flex;
	flex-direction: column;
}
.titl p{
	flex: 2;
	color:#000000;
	font-weight: bolder;
	font-size: 60rpx;
	line-height: 100rpx;
}
.titl text{
	flex: 1;
	color: #888888;
	font-weight: lighter;
}
.board{
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	justify-content:space-between;
}
.board .board-item{
	display: flex;
	flex: 1;
	background: #fbf9fe;
	padding: 40rpx;
	margin-bottom: 10rpx;
	cursor: pointer;
}
.board-item text{
	flex: 1;
}
.board-item image{
	width: 40rpx;
	height: 40rpx;
}
